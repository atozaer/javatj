package kr.co.tj;

import java.util.Scanner;

public class Test09 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		double x = 0.0;
		double y = 0.0;

		System.out.println("두 개의 실수를 입력하세요.");
		x = sc.nextDouble();
		y = sc.nextDouble();

		System.out.printf("x = %.2f \n", x);
		System.out.printf("y = %.2f \n", y);

		sc.close();
	}
}
